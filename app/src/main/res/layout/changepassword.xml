<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_basic_background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:paddingLeft="10dp"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="@dimen/button_basic_margin"
        android:background="@drawable/appjam_visual_txt"
        android:inputType="textPassword"
        android:maxLength="15"
        android:hint="현재 비밀번호"
        android:textSize="@dimen/text_size"
        android:textColorHint="@color/color_basic_background"
        />
    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:paddingLeft="10dp"
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="@dimen/button_basic_margin"
        android:background="@drawable/appjam_visual_txt"
        android:inputType="textPassword"
        android:maxLength="15"
        android:hint="새 비밀번호"
        android:textSize="@dimen/text_size"
        android:textColorHint="@color/color_basic_background"
        />
    <EditText
        android:id="@+id/checkNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:paddingLeft="10dp"
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="118dp"
        android:background="@drawable/appjam_visual_txt"
        android:inputType="textPassword"
        android:maxLength="15"
        android:hint="새 비밀번호 확인"
        android:textSize="@dimen/text_size"
        android:textColorHint="@color/color_basic_background"
        />
    <Button
        android:id="@+id/changePasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="비밀번호 변경"
        />
</LinearLayout>