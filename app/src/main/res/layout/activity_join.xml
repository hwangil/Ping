<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/appjam_visual_bg2"
    tools:context=".IntroActivities.JoinActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/button_basic_margin"
            android:layout_marginRight="@dimen/button_basic_margin"
            android:layout_marginBottom="@dimen/button_basic_margin"
            android:layout_width="164dp"
            android:layout_height="@dimen/editText_height"
            android:background="@drawable/appjam_visual_txt2"
            android:id="@+id/join_id"
            android:hint="ID"
            android:paddingLeft="@dimen/text_padding"
            android:textSize="10dp"
            android:maxLines="1"
            android:singleLine="true"/>
        <RadioGroup
            android:id="@+id/radio_gender"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/editText_height"
            android:layout_marginRight="@dimen/button_basic_margin"
            android:layout_marginBottom="@dimen/button_basic_margin"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/gender_male"
                android:layout_marginRight="@dimen/button_small_margin"
                android:background="@drawable/appjam_visual_man_off"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:button="@null"/>

            <RadioButton
                android:layout_weight="1"
                android:checked="true"
                android:id="@+id/gender_female"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:background="@drawable/appjam_visual_woman_on"
                android:button="@null"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="@dimen/button_basic_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:background="@drawable/appjam_visual_txt"
        android:id="@+id/join_name"
        android:hint="성명"
        android:paddingLeft="@dimen/text_padding"
        android:textSize="10dp"
        android:maxLines="1"
        android:singleLine="true"/>
    <EditText
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="@dimen/button_basic_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:inputType="textPassword"
        android:background="@drawable/appjam_visual_txt"
        android:id="@+id/join_pw"
        android:hint="PW"
        android:paddingLeft="@dimen/text_padding"
        android:textSize="10dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:layout_marginBottom="@dimen/button_basic_margin"
        android:background="@drawable/appjam_visual_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_height"
        android:inputType="textPassword"
        android:id="@+id/join_re_pw"
        android:hint="R.PW"
        android:paddingLeft="@dimen/text_padding"
        android:textSize="10dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/editText_height"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:id="@+id/join_birthday"
            android:background="@drawable/appjam_visual_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="생년월일"
            android:textSize="10dp"
            android:paddingLeft="@dimen/text_padding"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_weight="1"
            android:background="@drawable/appjam_visual_txt"
            android:id="@+id/join_birth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:textAlignment="center"
            android:gravity="center_vertical"
            />
        <DatePicker
            android:layout_weight="3"
            android:calendarViewShown="false"
            android:id="@+id/date_picker"
            android:layout_width="240dp"
            android:background="@drawable/basic_border"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:layout_marginTop="48dp"
        android:layout_marginBottom="@dimen/button_bottom_margin"
        android:layout_marginLeft="@dimen/button_basic_margin"
        android:layout_marginRight="@dimen/button_basic_margin"
        android:id="@+id/btnJoin"
        android:background="@drawable/appjam_visual_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />
</LinearLayout>